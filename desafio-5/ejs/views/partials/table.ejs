<div class='w-100 d-flex justify-content-center'>
    <a href="/" class="btn btn-info mx-auto mb-3">Inicio</a>
</div>
<div>
    <table class='border border-2 border-dark mx-auto'>
        <% let mesActual=new Intl.DateTimeFormat('es-ES', { month: 'long' }).format(new Date());%>
            <% let actualYear=new Date().getFullYear() %>
                <caption>Lista de productos de MagicKeyboards de <%- mesActual%>
                        <%- actualYear%>. </caption>
                <thead>
                    <tr class='border border-secondary border-top-0 border-start-0 border-end-0 border-bottom-2'>
                        <th class='bg-success p-1 text-center'>Producto</th>
                        <th
                            class='bg-success border border-secondary border-top-0 border-bottom-0 border-2 p-1 text-center'>
                            Precio</th>
                        <th class='bg-success p-1 text-center'>Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(item=> { %>
                        <tr>
                            <td
                                class='bg-info border border-secondary border-end-2 border-start-0 border-bottom-0 border-top-0 p-2'>
                                <%- item.title %>
                            </td>
                            <td
                                class='bg-info border border-secondary border-end-2 border-start-0 border-bottom-0 border-top-0 p-2'>
                                <%- item.price %>
                            </td>
                            <td class='bg-info  p-2'>
                                <img alt='<%= item.title %> foto' src=<%- item.thumbnail %>
                                style="width:350px;">

                            </td>
                        </tr>
                        <% });%>

                </tbody>
    </table>
</div>